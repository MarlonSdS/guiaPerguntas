                <form action="">
                    <label for="">Titulo</label>
                    <input type="text" placeholder="Pergunte" class="form-control">
                    <br><label for="">Descrição</label>
                    <textarea name="" id="" cols="30" rows="10" placeholder="Descreva sua pergunta aqui" class="form-control"></textarea>
                    <br>
                    <button class="btn btn-primary">Perguntar</button>
                </form>
            </div>
        </div>
       
        
    </div>

</body>
