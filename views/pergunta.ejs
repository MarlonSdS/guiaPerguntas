<%- include("partials/header") %>
<body>
    <%- include("partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="POST">
            <label for="">Responda</label>
            <textarea name="corpo" id="" cols="30" rows="5" class="form-control" placeholder="Digite sua resposta"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <br>
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
        <br>
    </div>
</body>
<%- include("partials/footer.ejs") %>